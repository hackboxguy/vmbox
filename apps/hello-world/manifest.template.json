{
  "name": "@PROJECT_NAME@",
  "version": "@PROJECT_VERSION@",
  "description": "Hello World Demo Application",
  "type": "webapp",
  "port": 8002,
  "url": "/",

  "health": {
    "type": "http",
    "endpoint": "/health",
    "port": 8002,
    "interval": 10,
    "timeout": 5,
    "expected_status": 200
  },

  "startup": {
    "command": "/app/@PROJECT_NAME@/bin/hello-world-server",
    "args": ["--config", "/data/app-config/@PROJECT_NAME@/config.json"],
    "working_dir": "/app/@PROJECT_NAME@",
    "priority": 20,
    "depends_on": []
  },

  "shutdown": {
    "timeout": 10,
    "signal": "SIGTERM"
  },

  "data_dirs": [
    "cache"
  ],

  "config_files": [
    {
      "source": "etc/config.json.default",
      "dest": "config.json"
    }
  ],

  "env": {
    "APP_DATA_DIR": "/data/app-data/@PROJECT_NAME@",
    "APP_CONFIG_DIR": "/data/app-config/@PROJECT_NAME@",
    "APP_LOG_FILE": "/var/log/app/@PROJECT_NAME@.log"
  },

  "logging": {
    "file": "/var/log/app/@PROJECT_NAME@.log",
    "syslog_tag": "app.@PROJECT_NAME@",
    "max_size_mb": 5,
    "rotate_count": 3
  }
}
